@model CinemaPortal_ASP.NET_Core.ViewModels.ChangeUserNameViewModel
@{
    ViewBag.Title = "Редактирование имени";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangeUserName", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    
<div class="form-group">
    @Html.LabelFor(m => m.OldUserName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        <p class="form-control">@Model.OldUserName</p>
    </div>
    @Html.LabelFor(m => m.NewUserName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">

        @Html.TextBoxFor(m => m.NewUserName, new { @class = "form-control" })

    </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "CancelEdit", "Account", htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    </div>
}

